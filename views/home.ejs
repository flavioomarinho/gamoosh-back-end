<table class="table table-striped">
	<tr class="bg-info">
		<th>Serie</th>
		<th>Mac</th>
		<th>Ip</th>
		<th>Estado</th>
		<th>Calibração</th>
		<th>Erro</th>
		<th>Versão</th>
		<th>Localização</th>
		<th>Detalhes</th>
	</tr>

	<tbody id="myTable">
		<% for(var i = 0; i < arrayObjetos.length; ++ i) { %>

		<tr id="linha">
			<td id="serieNode"><%=arrayObjetos[i].serie%></td>
			<td><%=arrayObjetos[i].mac%></td>
			<td><%=arrayObjetos[i].ip%></td>
			<td><%=arrayObjetos[i].estado%></td>
			<td><%=arrayObjetos[i].calibracao%></td>
			<td><%=arrayObjetos[i].erro%></td>
			<td><%=arrayObjetos[i].versao%></td>
			<td><%=arrayObjetos[i].localizacao%></td>
			<td><button id="detalhes" onclick="redireciona()">Detalhes</button></td>
		</tr>


		<%}%>

	

		</tbody>
	</table>
		<script>
			function redireciona() {
				var valorDaSerie =  document.getElementById("serieNode").innerHTML;
				localStorage.setItem("serie", valorDaSerie);
				location.assign('http://localhost:3000/dashboard');
			}

		</script>
		<script>
			setInterval(function () {
				window.location.reload(1);
			}, 30000);
		</script>